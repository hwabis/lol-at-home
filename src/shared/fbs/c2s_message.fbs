include "game_actions.fbs";
namespace lol_at_home_shared;

table ChatMessageFB {
  text: string;
}

enum ChampionIdFB: ubyte {
  Garen = 0,
  Teemo = 1,
}

table ChampionSelectFB {
  champion_id: ChampionIdFB;
  team_color: TeamColorFB;
}

union C2SDataFB {
  GameActionFB,
  ChatMessageFB,
  ChampionSelectFB,
}

table C2SMessageFB {
  message: C2SDataFB;
}

root_type C2SMessageFB;
